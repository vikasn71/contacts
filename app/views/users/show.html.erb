<h1>Listing contacts of <%= @user.name %></h1>
<%= link_to 'New Phone number', new_phone_number_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.phone_numbers.each do |phone_number| %>
      <tr>
        <td><%= phone_number.name %></td>
        <td><%= phone_number.number %></td>
        <td><%= phone_number.notes %></td>
        <td><%= link_to 'Show', phone_number %></td>
        <td><%= link_to 'Edit', edit_phone_number_path(phone_number) %></td>
        <td><%= link_to 'Destroy', phone_number, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Users', users_path %>
